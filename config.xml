<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.hellocordova" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Toka Bank</name>
    <description>
        A Smart Way To Spent Your Money Abroad.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <icon src="icon.png"/>

<icon src="res/icon/android/icon-36-ldpi.png" gap:qualifier="ldpi" gap:platform="android"/>

<icon src="res/icon/android/icon-48-mdpi.png" gap:qualifier="mdpi" gap:platform="android"/>

<icon src="res/icon/android/icon-72-hdpi.png" gap:qualifier="hdpi" gap:platform="android"/>

<icon src="res/icon/android/icon-96-xhdpi.png" gap:qualifier="xhdpi" gap:platform="android"/>

<icon src="res/icon/blackberry/icon-80.png" gap:platform="blackberry"/>

<icon src="res/icon/blackberry/icon-80.png" gap:platform="blackberry" gap:state="hover"/>

<icon src="res/icon/ios/icon-57.png" gap:platform="ios" height="57" width="57"/>

<icon src="res/icon/ios/icon-72.png" gap:platform="ios" height="72" width="72"/>

<icon src="res/icon/ios/icon-57-2x.png" gap:platform="ios" height="114" width="114"/>

<icon src="res/icon/ios/icon-72-2x.png" gap:platform="ios" height="144" width="144"/>

<icon src="res/icon/webos/icon-64.png" gap:platform="webos"/>

<icon src="res/icon/windows-phone/icon-48.png" gap:platform="winphone"/>

<icon gap:role="background" src="res/icon/windows-phone/icon-173.png" gap:platform="winphone"/>

